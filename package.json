{
  "name": "food-klutch",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "db:start": "mongodb-start",
    "db:stop": "mongodb-stop",
    "dev": "next dev",
    "lint": "next lint",
    "lint:1": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prepare": "husky",
    "server": "json-server data/db.json -p 3001",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@heroicons/react": "^2.1.1",
    "clsx": "^2.1.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.1.3",
    "next": "14.1.0",
    "next-themes": "^0.2.1",
    "react": "^18",
    "react-dom": "^18",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vercel/style-guide": "^5.2.0",
    "autoprefixer": "^10.0.1",
    "dotenv": "^16.4.4",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "json-server": "^1.0.0-alpha.23",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5"
  }
}
